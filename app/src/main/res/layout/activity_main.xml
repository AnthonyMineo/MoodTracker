<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.denma.moodtracker.Controller.MainActivity"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/activity_main_smiley_sad_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/faded_red">

            <ImageView
                android:id="@+id/activity_main_smiley_sad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/smiley_sad"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_smiley_disappointed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/warm_grey">

            <ImageView
                android:id="@+id/activity_main_smiley_disappointed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/smiley_disappointed"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_smiley_normal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/cornflower_blue_65">

            <ImageView
                android:id="@+id/activity_main_smiley_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/smiley_normal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_smiley_happy_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/light_sage">

            <ImageView
                android:id="@+id/activity_main_smiley_happy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/smiley_happy"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_smiley_super_happy_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/banana_yellow">

            <ImageView
                android:id="@+id/activity_main_smiley_super_happy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/smiley_super_happy"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>


